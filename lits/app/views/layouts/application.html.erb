<!DOCTYPE html>
<html>
  <head>
    <title>Centr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= navbar 'Центр', {события: events_path, категории: '#', организаторы: '#'} do 
      link_to('Логин', '#', class: 'btn btn-info navbar-btn') 
    end %>

    <%= container('m-t-70') { 
      events_timeline +
      yield 
    } %>
  </body>
</html>
